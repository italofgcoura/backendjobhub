{
  "name": "api",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "dev": "nodemon src/index.ts",
    "start": "node dist",
    "backend": "npm run mongo && npm run backendserver",
    "backendserver": "nodemon ./src/index.ts",
    "mongo": "docker start mongo",
    "deploy": "ts-node index.ts",
    "installRun": "npm install && npm run build",
    "dockerup": "docker-compose up -d --build",
    "migration":"npx prisma generate && npx prisma migrate dev --name init"
  },
  "type": "commonjs",
  "devDependencies": {
    "@types/cookie-parser": "^1.4.3",
    "@types/jsonwebtoken": "^9.0.1",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.14.6",
    "@typescript-eslint/eslint-plugin": "^5.43.0",
    "@typescript-eslint/parser": "^5.43.0",
    "eslint": "^8.27.0",
    "nodemon": "^2.0.20",
    "ts-node": "^10.9.1",
    "tsx": "^3.12.3",
    "typescript": "^4.9.5"
  },
  "pre-commit": [
    "ts.check",
    "build",
    "add-build"
  ],
  "dependencies": {
    "@prisma/client": "^4.11.0",
    "body-parser": "^1.20.1",
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.0.3",
    "dotenv-safe": "^8.2.0",
    "express": "^4.18.2",
    "firebase-admin": "^11.5.0",
    "jsonwebtoken": "^9.0.0",
    "jwt-decode": "^3.1.2",
    "mongoose": "^6.7.2",
    "multer": "^1.4.5-lts.1",
    "prisma": "^4.11.0",
    "socket.io": "^4.5.3"
  }
}
